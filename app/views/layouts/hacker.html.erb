<!DOCTYPE html>
<html>
<head>
  <title>HackerPlaza</title>
  <%= stylesheet_link_tag    'hacker/hacker', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css' %>
  <%= include_gon(:init => true) %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper">
	<div class="box">
		<div class="row row-offcanvas row-offcanvas-left">
		      

		<%= render 'hacker/sidebar' %>

			<!-- main right col -->
			<div class="column col-sm-10 col-xs-11" id="main">

				<%= render 'hacker/navigation' %>
				<div class="padding">
    				<div class="full col-sm-9">
						<%= yield %>
						<hr>
						<%= render 'hacker/footer' %>
					</div>
				</div>
			</div>
			<!-- /main -->

		</div>
	</div>
</div>
</body>
</html>
