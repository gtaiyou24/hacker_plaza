<!-- content -->                      
<div class="row">

	<div class="col-sm-12">
		<%= link_to hacker_thread_tables_path, class: "btn btn-primary", style: "margin-bottom:15px;" do %>
			<i class="fa fa-chevron-left"></i> 一覧へ
		<% end %>
	</div>

	<!-- main col --> 
	<div class="col-sm-12 col-md-6 well">
		<%= form_for @thread_table, url: hacker_thread_tables_path, :html => {:multipart => true} do |f| %>
			<h4>スレッド作成</h4>
			<div class="form-group">
				<label>スレッド名</label>
				<%= f.text_field :title, class: "form-control", autofocus: true %>
			</div>
			<div class="form-group">
				<label>概要</label>
				<%= f.text_area :content, class: "form-control", rows:4 %>
			</div>
			<div class="form-group">
				<label>スレッドイメージ</label>
				<%= f.file_field :image %>
    			<%= f.hidden_field :image_cache %>
			</div>
			<%= f.submit "保存", class: "btn btn-lg btn-primary" %>
		<% end %>
	</div>

</div><!--/row-->