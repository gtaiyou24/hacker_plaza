<!-- main col --> 
<div class="col-sm-12">
<% if !@projects.empty? %>
  <% @projects.each do |project| %>
  <div class="row well">
      <div class="col-md-7">
        <%= link_to hacker_project_path(project.id) do %>
          <%= image_tag project.image.url, class: "img-responsive img-thumbnail", style:"width:700px;height:auto;"  %>
        <% end %>
      </div>
      <div class="col-md-5">
          <h3><%= project.title %></h3>
          <h4>
            <% project.users.each do |user| %>
              <%= user.name %> 
            <% end %>
          </h4>
          <p><%= project.description %></p>
          <label>タグ</label>
          <% project.tag_list.each do |tag| %>
          <span class="label label-primary"><%= tag %></span>
          <% end %>
          <p><%= project.project_likes.count %>人がいいね！といっています</p>
          <%= link_to hacker_project_path(project.id), class: "btn btn-primary" do %>
            プロジェクト詳細 <i class="fa fa-chevron-right"></i>
          <% end %>
      </div>
  </div>
  <hr>
  <% end %>
<% end %>
</div>